				size_hint_x: .25
				id: admin_tipo
				text: 'Admin'
				group: 'usuario_tipo'
			ToggleButton: 
				size_hint_x: .25
				id: trabajador_tipo
				text: 'vendedor'
				group: 'usuario_tipo'
