			BotonPredeterminado:
				id: boton_signout
				size_hint_x: .2
				text: 'Salir de Cuenta'
				on_release: root.salir()

	ScreenManager:
        id: vista_manager
		canvas.before:
			Color:
				rgba: hex('#FFFFFF')
			Rectangle:
				size: self.size
				pos: self.pos
		VistaProductos:
			id: vista_productos
		VistaUsuarios:
			id: vista_usuarios
