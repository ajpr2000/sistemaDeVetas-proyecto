##:kivy !
#:import hex kivy.utils.get_color_from_hex

<BotonPredeterminado@Button>:
    background_normal: ''
    background_color: hex('#244B76')

<ColorLabel@Label>:
    canvas.before:
        Color:
            rgba: hex('#1a1a1ad')
        Rectangle:
            size: self.size
            pos: self.pos
<CustomBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        BorderImage:
            border: .05, .05, .05 , .05 
            pos: self.pos
            size: self.size
<AdminRV>:
    SelectableRecycleBoxLayout:
        default_size: None, dp(36)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False

<SelectableProductoLabel>:
