<ProductoPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: ''
    BoxLayout:
	    orientation: 'vertical'
	    padding: .05
	    BoxLayout:
	    	size_hint_y: .1
		    Label:
		    	id: producto_info_1
	    Label:
	    	id: no_validado_notif
	    	size_hint_y: .1
	    TextInput:
			size_hint_y: .2
			id: producto_codigo
			multiline: False
			hint_text: 'Código'
			write_tab: False
		TextInput:
			id: producto_nombre
			size_hint_y: .2
			multiline: False
			hint_text: 'Nombre'
			write_tab: False
		BoxLayout:
			size_hint_y: .2
			TextInput: 
				id: producto_cantidad
				multiline: False
				hint_text: 'Cantidad'
				write_tab: False
			TextInput: 
				id: producto_precio
				multiline: False
				hint_text: 'Precio'
				write_tab: False
		BoxLayout:
			size_hint_y: .2
		    Button:
		    	text: 'Aceptar'
		    	on_release: root.verificarInfo(producto_codigo.text, producto_nombre.text, producto_cantidad.text, producto_precio.text)
		    Button:
		        text: 'Cancelar'
		        on_press: root.dismiss()

<UsuarioPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: ''
    BoxLayout:
	    orientation: 'vertical'
	    padding: .05
	    Label:
	    	size_hint_y: .1
	    	id: usuario_info_1
	    Label:
	    	id: no_valid_notif
	    	size_hint_y: .1
	    TextInput: 
			size_hint_y: .2
			id: usuario_username
			multiline: False
			hint_text: 'Username'
			write_tab: False
		TextInput: 
			id: usuario_nombre
			size_hint_y: .2
			multiline: False
			hint_text: 'Nombre'
			write_tab: False
        TextInput: 
			id: usuario_apellido
			size_hint_y: .2
			multiline: False
			hint_text: 'Apellido'
			write_tab: False
        TextInput: 
			id: usuario_documento
			size_hint_y: .2
			multiline: False
			hint_text: 'Documento'
			write_tab: False
		BoxLayout:
			size_hint_y: .2
